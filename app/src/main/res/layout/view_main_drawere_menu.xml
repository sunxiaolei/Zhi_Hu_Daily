<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="#55FFFFFF"
    android:clickable="true"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/ic_drawer_head"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/ic_user_head"
        fresco:roundAsCircle="true" />

    <TextView
        android:id="@+id/tv_drawer_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/click_login"
        android:textColor="@color/text_white" />

    <TextView
        android:id="@+id/tv_drawer_favorite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="200dp"
        android:drawableLeft="@drawable/ic_my_favorite"
        android:drawablePadding="20dp"
        android:text="@string/my_favorite"
        android:textColor="@color/text_white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_drawer_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/md_item_selected"
        android:drawableLeft="@drawable/ic_set"
        android:drawablePadding="20dp"
        android:text="@string/set"
        android:textColor="@color/text_white"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>
    
